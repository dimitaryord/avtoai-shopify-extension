generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Session {
  session_id  String    @id @default(auto()) @map("_id") @db.ObjectId
  id          String    @unique
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model User {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  shop                String @unique
  assistantId         String @unique
  formDataFileId      String @unique
  formDataFileContent Json
  productsFileId      String @unique
  productsFileContent Json
}
